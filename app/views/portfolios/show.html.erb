<p id="notice"><%= notice %></p>
<div class="containter">
  <div class="row">
    <% if @portfolio.profile_img.attached? %>
      <div class="col-lg-4 col-md-6 col-sm-12 pr-3 pb-3">
        <%= image_tag(@portfolio.profile_img, style: 'width:100%; height: 18rem;',class:"img-thumbnail ") %>
      </div>
    <% end %>
    <div class="col-lg-8 col-md-6 col-sm-12">
      <div class="row">
        <div class="col-lg-12 pb-2">
          <div class="card mb-2 msg-opacity">
            <p><%= @portfolio.title %></p>
          </div>
          <div class="card msg-opacity">
            <p><%= @portfolio.description %></p>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="center">
  <p class="headline">Fotografije Radova</p>
</div>

<div class="containter">
  <div class="row align-items-center">
    <%(0...@portfolio.images.count).each do |image| %>
      <div class="col-lg-4 col-md-6 col-sm-12 pr-3 pb-3">
        <div>
          <%= image_tag(@portfolio.images[image], style: 'width:100%; height: 18rem;',class:"img-thumbnail ") %>
        </div>
      </div>
    <% end %>
  </div>
</div>



